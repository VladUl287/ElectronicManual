<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestApiDoc.Views" xmlns:viewmodels="clr-namespace:RestApiDoc.ViewModels" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="RestApiDoc.Views.TestsWindow"
        d:DataContext="{d:DesignInstance Type={x:Type viewmodels:ChapterViewModel}}"
        mc:Ignorable="d"
        Title="TestsWindow" Height="450" Width="800" Background="#2b373d">
    <Window.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#fff"></Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#fff"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <StatusBar DockPanel.Dock="Bottom">
                <Label x:Name="lblTimeTest"/>
            </StatusBar>
            <ScrollViewer Grid.Column="0" HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="QuestionsPanel">

                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
